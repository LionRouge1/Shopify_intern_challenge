<h1>Items</h1>

<div id="items">
  <% @items.each do |item| %>
    <div class="card w-50 mb-2 p-2">
      <div class="d-flex justify-content-between w-50">
        <p>
          <strong>Name:</strong>
          <%= item.item_name %>
        </p>
        <p>
          <strong>Category:</strong>
          <%= item.category %>
        </p>
      </div>
      <p>
        <%= link_to "Show this item", item %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New item", new_item_path, class: 'btn btn-primary' %>
